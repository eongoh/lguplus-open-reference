<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- src/test 디렉토리에서는 _ 검출 제외 -->
    <suppress checks="[^_]+" files=".*src/test/.*" />

    <!-- @Entity 아닌 파일들은 IllegalType 검출 제외 -->
    <module name="SuppressionXpathFilter">
        <property name="query" value="//CLASS_DEF[./MODIFIERS/ANNOTATION/IDENT[@text='Entity']]" />
<!--        <property name="query" value="//CLASS_DEF[not(./MODIFIERS/ANNOTATION/IDENT[@text='Entity'])]" />-->
<!--        <property name="query" value="//CLASS_DEF[(./MODIFIERS/ANNOTATION/IDENT[@text='Entity'])]" />-->
        <property name="checks" value="IllegalType" />
    </module>

</suppressions>
