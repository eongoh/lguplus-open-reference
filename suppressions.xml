<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">
<suppressions>
    <!-- src/test 디렉토리에서는 _ 검출 제외 -->
    <suppress checks="[^_]+" files=".*src/test/.*" />

    <!-- entity 디렉토리를 제외한 모든 곳에서 IllegalType 검사 제외 -->
    <suppress checks="IllegalType" files="^(?!.*\/entity\/).*" />
    <!-- @Id가 붙은 필드 검사 제외 (xpath 추가) -->
    <suppress checks="IllegalType" xpath="//VARIABLE_DEF[preceding-sibling::ANNOTATION[@text='Id']]" />
    <!-- final 키워드가 붙은 필드 검사 제외 (xpath 추가) -->
    <suppress checks="IllegalType" xpath="//VARIABLE_DEF[MODIFIERS/FINAL]" />

</suppressions>
